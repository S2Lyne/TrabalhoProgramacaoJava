import.java.util.Scanner;

        // Implemente a lógica para cadastrar um cliente

public class MenuCadastro {
public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int opcao = -1;

        while (opcao != 0) {
            System.out.println("MENU PRINCIPAL");
            System.out.println("Selecione uma opção:");
            System.out.println("1 - Cadastrar");
            System.out.println("2 - Atualizar");
            System.out.println("3 - Deletar");
            System.out.println("4 - Atendimento");
            System.out.println("0 - SAIR");

            opcao = scanner.nextInt();

            switch (opcao) {
                case 1:
                    cadastrarMenu(scanner);
                    break;
                case 2:
                    atualizarMenu(scanner);
                    break;
                case 3:
                    deletarMenu(scanner);
                    break;
                case 4:
                    atendimento();
                    break;
                case 0:
                    System.out.println("Saindo...");
                    break;
                default:
                    System.out.println("Opção inválida. Tente novamente.");
                    break;
            }
        }

        scanner.close();
    }

    public static void cadastrarMenu(Scanner scanner) {
        int opcao = -1;

        while (opcao != 0) {
            System.out.println("CADASTRAR");
            System.out.println("Selecione uma opção:");
            System.out.println("1 - Cliente");
            System.out.println("2 - Funcionário");
            System.out.println("3 - Serviço");
            System.out.println("0 - Voltar ao menu anterior");

            opcao = scanner.nextInt();

            switch (opcao) {
                case 1:
                    cadastrarCliente();
                    break;
                case 2:
                    cadastrarFuncionario();
                    break;
                case 3:
                    cadastrarServico();
                    break;
                case 0:
                    System.out.println("Voltando ao menu anterior...");
                    break;
                default:
                    System.out.println("Opção inválida. Tente novamente.");
                    break;
            }
        }
    }

    public static void atualizarMenu(Scanner scanner) {
        int opcao = -1;

        while (opcao != 0) {
            System.out.println("ATUALIZAR");
            System.out.println("Selecione uma opção:");
            System.out.println("1 - Cliente");
            System.out.println("2 - Funcionário");
            System.out.println("3 - Serviço");
            System.out.println("0 - Voltar ao menu anterior");

            opcao = scanner.nextInt();

            switch (opcao) {
                case 1:
                    atualizarCliente(); // Chama o método para atualizar um cliente
                    break;
                case 2:
                    atualizarFuncionario(); // Chama o método para atualizar um funcionário
                    break;
                case 3:
                    atualizarServico(); // Chama o método para atualizar um serviço
                    break;
                case 0:
                    System.out.println("Voltando ao menu anterior...");
                    break;
                default:
                    System.out.println("Opção inválida. Tente novamente.");
                    break;
            }
        }
    }

